<h3>Post a Prayer</h3>
<%= form_for [ @article, @comment ] do |f| %>
  <p>
      <%= f.label :author_name, "Yo Hababa name"%><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
      <%= f.label :body, "Yo content" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>